%wrapper.mypage
  = render partial: "sidebar"
  %wrapper.contents
    = render partial: "head"
    %h3 コインチャージ
    %ul
      - @price.each do |k, v|
        %li.nonborder.swich{ style: "padding: 0;margin-bottom: 20px;justify-content:start;"}
          %input{ type: "checkbox", style: "margin-top: 15px;"}
          =image_tag "coin.png", style: "width:40px;height:40px;"
          %p{ style: "width: 50px;"}= k
          %p{ style: "margin-right: auto;"}
            %span= v[0]
            コインお得！
          %p= v[1]
    .buttons{ style: "margin-top: 30px"}
      %button
        = link_to "次へ", charge_completed_mypages_path
      -# TODO:戻るボタンの意味を確認
      %button.nega
        = link_to "戻る", :back
